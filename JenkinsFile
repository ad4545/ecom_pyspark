pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: node
    image: adarsh7r/ecom-pytest:latest
    command:
    - cat
    tty: true
"""
        }
    }
    stages {
        stage('Test') {
            steps {
                container('node') {
                    sh 'pytest -v'
                }
            }
        }
    }
}
