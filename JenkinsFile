pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: node
    image: adarsh7r/ecom-pytest:latest
    command:
    - cat
    tty: true
"""
        }
    }
    stages {
        stage('Pyspark Test') {
            steps {
                container('node') {
                    sh 'pytest'
                }
            }
        }
        stage('Build Docker Image') {
                steps {
                    script {
                        // Build a Docker image
                        def customImage = docker.build("spark-app:2025", ".") 
                    }
                }
            }
    }
}
