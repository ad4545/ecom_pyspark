pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: node
    image: adarsh7r/ecom-pytest:latest
    command:
      - cat
    tty: true

  - name: docker
    image: docker:27-cli    # docker CLI only
    command:
      - cat
    tty: true
    env:
      - name: DOCKER_HOST
        value: "tcp://host.docker.internal:2375"
"""
    }
  }

  stages {
    stage('Checkout') {
      steps {
        // Jenkins will fetch your Git repo into $WORKSPACE
        checkout scm
      }
    }

    stage('PySpark Test') {
      steps {
        container('node') {
          sh 'pytest'
        }
      }
    }

    stage('Docker Build') {
      steps {
        container('docker') {
          sh '''
            echo "Building Docker image from workspace..."
            ls -lh  
          '''
        }
      }
    }
  }
}
