pipeline {
    agent any

    stages {
        stage("Checkout"){
            steps{
                sh 'ls -la'
                sh 'java -version'
                echo "Listed....."
            }
        }
        stage('Test') {
            steps {
                script {
                docker.build('adarsh7r/ecom-pytest:latest').inside {
                    sh 'pytest -v'
                }
                }
            }
        }
    }
}