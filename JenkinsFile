pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: node
    image: adarsh7r/ecom-pytest:latest
    command:
      - cat
    tty: true

  - name: docker
    image: docker:27-cli    # docker CLI only
    command:
      - cat
    tty: true
    env:
      - name: DOCKER_HOST
        value: "tcp://host.docker.internal:2375"
"""
    }
  }

  stages {
    stage('Pyspark Test') {
      steps {
        container('node') {
          // run tests in the workspace (same workspace visible to other container)
          sh '''
              pytest
              ls -la
             '''
          
        }
      }
    }

    stage('Build Docker image') {
      steps {
        container('docker') {
          sh '''
            echo "Docker client version:"
            docker version
          '''
        }
      }
    }
  }
}
